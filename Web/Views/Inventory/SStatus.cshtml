            <e-data-manager url="/Inventory/_statusDatasource" insertUrl="/Inventory/_statusInsert" updateUrl="/Inventory/_statusUpdate" removeUrl="/Inventory/_statusDelete" adaptor="UrlAdaptor"></e-data-manager>
            <e-grid-columns>
                <e-grid-column field="ID" isPrimaryKey="true" headerText="Code" visible="false" type="number" textAlign="Right"></e-grid-column>
                <e-grid-column field="StatusCode" headerText="Code" type="string" visible="false" validationRules="@(new Dictionary<string, object>() {{ "required",true}, { "minLength",2}, { "maxLength",30} })"></e-grid-column>
                <e-grid-column field="Description" headerText="Description" type="string" validationRules="@(new Dictionary<string, object>() {{ "required",true}, { "minLength",2}, { "maxLength",200}})"></e-grid-column>
                <e-grid-column field="CreateDate" headerText="Last Create Date" allowEditing="false" customFormat="@(new { type ="date", format="yyyy-MM-dd HH:mm:ss" })" type="date" textAlign="Right"></e-grid-column>
                <e-grid-column field="LastUpdatedDate" headerText="Last Update Date" allowEditing="false" customFormat="@(new { type ="date", format="yyyy-MM-dd HH:mm:ss" })" type="date" textAlign="Right"></e-grid-column>
            </e-grid-columns>
        </ejs-grid>
